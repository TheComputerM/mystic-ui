{
  "name": "@mystic-ui/cli",
  "version": "0.0.2-alpha",
  "description": "A CLI for adding beautiful mystic components to your SolidJS apps.",
  "type": "module",
  "module": "dist/index.js",
  "bin": {
    "mysticui": "./dist/index.js"
  },
  "files": ["/dist"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --minify",
    "release": "np",
    "version": "bun run ./src/version.ts && bun run build && git add -A",
    "start": "bun run ./src/index.ts",
    "format": "biome format src",
    "lint": "biome lint src",
    "check": "biome check src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@clack/prompts": "^0.7.0",
    "@mystic-ui/registry": "workspace:*",
    "@types/bun": "latest",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "magicast": "^0.3.5",
    "np": "^10.0.7",
    "nypm": "^0.3.12",
    "ts-deepmerge": "^7.0.1",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "np": {
    "contents": "dist",
    "releaseDraft": false
  }
}